<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdharLoanActivity">

    <ScrollView
        android:layout_above="@id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="300dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:id="@+id/ll_instant"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/gray_curve1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70.0dip"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center"
                    android:layout_marginStart="20.0dip"
                    android:background="@drawable/m2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20.0dip"
                    android:text="@string/loan_calc_guide"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21.0sp" />
            </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_border2"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ad"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/q1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/qg1"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/ad" />
                <ImageView
                    android:id="@+id/q2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/qg2"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/ad" />
                <ImageView
                    android:id="@+id/q3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/qg3"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/ad" />
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_loan_guide"
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="20.0dip"
                android:background="@drawable/gray_curve1"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20.0dip"
                    android:background="@drawable/m3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40.0dip"
                    android:text="Types of Loan Guide"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21.0dip" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:minHeight="50dp"
        android:orientation="vertical" />
</RelativeLayout>