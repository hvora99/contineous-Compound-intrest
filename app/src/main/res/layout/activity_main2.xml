<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ScrollView
        android:layout_above="@id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="300dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />


            <LinearLayout
                android:id="@+id/ll_adhar"
                android:layout_width="fill_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/gray_curve1"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/services"
                    android:id="@+id/iv_adhar"
                    android:layout_width="50dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/loan4" />

                <TextView
                    android:id="@+id/tv_adhar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:text="Aadhar Loan Guide"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_instantloan"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="70sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Instant Loan Guide"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_loan_guide"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Loan Guide Guide"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_cash_counter"
                    android:layout_width="fill_parent"
                    android:layout_height="100sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Cash Counter"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_loantype"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Loan Guide Type"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_epf"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="EPF Service"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_holiday"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginTop="20sp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Bank Holiday"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_bankinfo"
                    android:layout_width="fill_parent"
                    android:layout_height="130sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_weight="1"
                    android:background="@drawable/gray_curve1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                    android:contentDescription="@string/services"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_gravity="center"
                        android:background="@drawable/m7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10sp"
                        android:text="Bank Info"
                        android:textColor="@color/colorPrimary"
                        android:textSize="21sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:minHeight="50sp"
        android:orientation="vertical" />


</RelativeLayout>