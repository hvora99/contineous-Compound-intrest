                        android:layout_height="24sp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5sp"
                        android:src="@drawable/ss"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ic_Creditcard"
                    android:layout_width="fill_parent"
