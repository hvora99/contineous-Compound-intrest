<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_above="@id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:minHeight="300dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                />


            <LinearLayout
                android:id="@+id/loanfirst"
                android:layout_width="fill_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/gray_curve1"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/services"
                     android:layout_width="50dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/loan4" />

                <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:text="@string/mortgage_calculation"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/loansecond"
                android:layout_width="fill_parent"
                android:layout_height="80sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginRight="20sp"
                android:background="@drawable/gray_curve1"
                android:orientation="horizontal">

                <ImageView
                    android:contentDescription="@string/services"
                    android:id="@+id/iv_adhar"
                    android:layout_width="50dp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:background="@drawable/m2" />

                <TextView
                    android:id="@+id/tv_adhar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20sp"
                    android:text="@string/intrest_calculation"
                    android:textColor="@color/colorPrimary"
                    android:textSize="21sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:minHeight="50dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" />

</RelativeLayout>