<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start"
    tools:context=".NextActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/banner_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/native_ad_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:minHeight="300dp"
                android:orientation="vertical" />


            <LinearLayout
                android:id="@+id/layer2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:background="@drawable/ractangle"
                android:gravity="center"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff0000"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="@string/start_app"
                    android:textColor="#fff"
                    android:textSize="20sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/start"
                    android:layout_width="match_parent"
                    android:layout_height="110sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="40sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="40sp"
                    app:cardBackgroundColor="#C6CED1"
                    app:cardCornerRadius="20sp"
                    app:cardElevation="4sp"
                    app:contentPadding="5sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20sp"
                            android:layout_marginLeft="20sp"
                            android:background="@drawable/starthome"
                            android:contentDescription="@string/todo"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="sans-serif-smallcaps"
                            android:gravity="center"
                            android:text="@string/start_app"
                            android:textColor="#ff0000"
                            android:textSize="25sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/rounded_border2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/black"
                        android:text="@string/ad"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/q1"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="15dp"
                            android:contentDescription="@string/ad"
                            android:src="@drawable/qg1" />

                        <ImageView
                            android:id="@+id/q2"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="15dp"
                            android:contentDescription="@string/ad"
                            android:src="@drawable/qg2" />

                        <ImageView
                            android:id="@+id/q3"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_margin="15dp"
                            android:contentDescription="@string/ad"
                            android:src="@drawable/qg3" />
                    </LinearLayout>
                </LinearLayout>


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/rate"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="10sp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="#D2C6CA"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/rate" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10sp"
                                    android:background="#21ccf8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="@string/rate"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/share"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20sp"
                            android:layout_marginBottom="10sp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="#D2C6CA"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/share" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10sp"
                                    android:background="#21ccf8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="@string/share_us"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/privacy"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="20sp"
                            android:layout_marginEnd="10sp"
                            android:layout_marginBottom="10sp"
                            android:layout_weight="2"
                            app:cardBackgroundColor="#D2C6CA"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_margin="5dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_horizontal"
                                    android:contentDescription="@string/todo"
                                    android:src="@drawable/privacy" />

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10sp"
                                    android:background="#21ccf8" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-smallcaps"
                                    android:text="@string/privacy"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    tools:ignore="SmallSp" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:minHeight="50sp"
        android:layout_marginTop="15sp"
        android:orientation="vertical" />
</RelativeLayout>